{
  "name": "ai-agent-demo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:server": "bun run --filter '@ai-agent-demo/server' dev",
    "dev:client": "bun run --filter 'client' dev",
    "build": "bun run --filter '*' build",
    "start": "bun run --filter '*' start",
    "prepare": "git config core.hooksPath .githooks"
  }
}
